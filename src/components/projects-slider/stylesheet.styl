.projects-slider
  position relative
  display block
  width 100%
  height 914px

  .slider-box
    position relative
    display block
    margin 0 auto
    width 100%
    height 914px
    background-position center center
    background-size contain
    background-repeat no-repeat !important

    .slider-item
      position absolute
      top 0
      left 0
      bottom 0
      right 0
      visibility hidden
      overflow hidden !important

      .slider-item-mockup
        position absolute
        top 260px
        left 0
        right 0
        margin 0 auto
        display block
        width 576px
        height 316px
        visibility hidden
        cursor pointer !important

        a
          position relative
          display block
          width 100%
          height 100%

          .mockup-laptop
            position relative
            display block
            width 576px
            height 316px
            background-position center center
            background-size 100% 100%
            background-repeat no-repeat !important
            -webkit-transform-origin 50% 50%
            transition transform 200ms linear
            overflow hidden !important

            &:hover
              transform scale(1.05)

            .project-cover
              position relative
              display block
              margin 20px auto 0 auto
              width 392px
              height 246px
              background-position center top
              background-size 100% auto
              background-repeat no-repeat !important
              overflow hidden !important

      .slider-item-mockup-0
        visibility visible

      .slider-item-infos
        position absolute
        top 638px
        left 0
        display block
        width 100%
        height 1px
        visibility hidden

        .slider-item-infos-content
          position relative
          display block
          width 100%
          height auto
          overflow hidden !important

          .name
            position relative
            display block
            width 100%
            height auto
            color #3f3f3f
            font-size 53px
            text-align center

          .dash
            position relative
            display block
            margin 16px auto
            width 68px
            height 2px
            background-color #3f3f3f
            overflow hidden !important

          .type
            position relative
            display block
            width 100%
            height auto
            color #3f3f3f
            font-size 34px
            line-height 42px
            text-align center


      .slider-item-infos-0
        visibility visible

    .slider-item-0
      visibility visible

    .slider-navigation-controls-box
      position absolute
      left 0
      bottom 58px
      right 0
      height 50px
      overflow hidden !important

      .slider-navigation-controls
        position relative
        display block
        margin 0 auto
        width 120px
        height 50px
        overflow hidden !important

        .navigation-control
          position absolute
          top 0
          width 36px
          height 50px
          background-position center center
          background-size 100% 100%
          background-repeat no-repeat !important
          overflow hidden !important

          &:hover
            outline 0 !important

        .navigation-control-left
          left 0

        .navigation-control-right
          right 0
