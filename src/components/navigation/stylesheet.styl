.navigation-container
  position absolute
  top 0
  left 0
  bottom 0
  right 0
  overflow-x hidden !important
  overflow-y auto !important
  background-color #77fcac

  .navigation
    position relative
    display block
    width 100%
    height auto
    overflow hidden !important

    .close-box
      position relative
      display block
      width 100%
      height auto
      overflow hidden !important

      .close-button
        position relative
        display block
        width 20px
        height 20px
        float right
        margin-top 20px
        margin-right 20px
        background-position center center
        background-size 100% 100%
        background-repeat no-repeat !important
        overflow hidden !important
        cursor pointer !important

        &:focus
          outline 0 !important

    .items
      position relative
      display block
      width 100%
      height auto
      overflow hidden !important

      .item
        position relative
        display block
        width 100%
        height auto
        overflow hidden !important

        .label
          position relative
          display block
          width 100%
          height auto
          color #ffffff
          font-size 15px
          padding-left 20px
          overflow hidden !important
