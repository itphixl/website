.btx-paris
  position relative
  display block
  width 100%
  height auto
  overflow hidden !important

  .project-link-button
    position relative
    display block
    width 80px
    height 16px
    background-color #262626
    font-size 9px
    line-height 16px
    text-align center
    overflow hidden !important
    cursor pointer !important

    &:focus
      outline 0 !important

    @media only screen and (min-width: 768px)
      width 192px
      height 36px
      font-size 22px
      line-height 36px

  .logo
    position relative
    display block
    margin 0 auto
    width 142px
    height 56px
    background-position center
    background-size 100% 100%
    background-repeat no-repeat !important
    overflow hidden !important

    @media only screen and (min-width: 768px)
      width 338px
      height 132px

  .description-box
    position relative
    margin-top 38px
    display block
    width 100%
    height auto
    overflow hidden !important

    @media only screen and (min-width: 768px)
      margin-top 90px

    .circle-gradient
      position relative
      display block
      width 68px
      height 68px
      margin-left 18px
      background-position center center
      background-size 100% 100%
      background-repeat no-repeat !important
      overflow hidden !important

      @media only screen and (min-width: 768px)
        margin-left 40px
        width 162px
        height 162px

    .title
      position relative
      display block
      width 100%
      height auto
      color #3d3d3d
      font-size 10px
      line-height 13px
      text-align left

      @media only screen and (min-width: 768px)
        font-size 24px
        line-height 28px

    .date
      position relative
      display block
      width 100%
      height auto
      color #3d3d3d
      font-size 8px
      line-height 10px
      text-align left

      @media only screen and (min-width: 768px)
        font-size 19px
        line-height 22px

    .type
      position relative
      display block
      margin-top 6px
      width 100%
      height auto
      color #3d3d3d
      font-size 10px
      line-height 13px
      text-align left

      @media only screen and (min-width: 768px)
        margin-top 20px
        font-size 24px
        line-height 28px

    .project-link-button
      margin-top 12px

      @media only screen and (min-width: 768px)
        margin-top 32px

  .first-screen-box,
  .second-screen-box,
  .third-screen-box,
  .forth-screen-box
    .infos-box
      position relative
      display block
      width 100%
      height auto
      overflow hidden !important

      .title
        position relative
        display table
        width auto
        height auto
        margin-left 18px
        color #3d3d3d
        font-size 14px
        padding-bottom 2px
        padding-right 6px
        border-bottom solid 1px #ffffff

        @media only screen and (min-width: 768px)
          margin-left 40px
          font-size 36px
          padding-bottom 6px
          padding-right 8px
          border-bottom solid 2px #ffffff

      .text
        position relative
        display block
        margin-top 10px
        padding-left 18px
        width 100%
        height auto
        color #3d3d3d
        font-size 10px
        line-height 12px
        text-align left

        @media only screen and (min-width: 768px)
          margin-top 24px
          padding-left 40px
          font-size 24px
          line-height 26px

  .first-screen-box
    position relative
    display block
    margin-top 50px
    width 100%
    height auto
    overflow hidden !important

    @media only screen and (min-width: 768px)
      margin-top 124px

    .first-screen
      position relative
      margin-top 28px
      display block
      width 100%
      height auto
      overflow hidden !important

      &:focus
        outline 0 !important

      @media only screen and (min-width: 768px)
        margin-top 86px

  .second-screen-box
    position relative
    display block
    padding-top 54px
    padding-bottom 158px
    width 100%
    height auto

    @media only screen and (min-width: 768px)
      padding-top 90px
      padding-bottom 380px

    .infos-box
      .title
        color #ffffff !important
        border-bottom-color #3d3d3d

      .text
        color #ffffff !important

    .second-screen
      position absolute
      left 0
      right 0
      bottom -70px
      margin 0 auto
      display block
      width 270px
      height 184px
      z-index 2
      overflow hidden !important

      &:focus
        outline 0 !important

      @media only screen and (min-width: 768px)
        bottom -160px
        width 628px
        height 430px

  .third-screen-box
    position relative
    padding-top 128px
    padding-bottom 236px
    display block
    width 100%
    height auto
    background-color #ffffff

    @media only screen and (min-width: 768px)
      padding-top 312px
      padding-bottom 586px

    .third-screen
      position absolute
      left 0
      right 0
      bottom -102px
      margin 0 auto
      display block
      width 270px
      height 303px
      z-index 2
      overflow hidden !important

      &:focus
        outline 0 !important

      @media only screen and (min-width: 768px)
        bottom -246px
        width 628px
        height 692px

  .screen-separator
    position relative
    display block
    width 100%
    height 166px
    overflow hidden !important

    @media only screen and (min-width: 768px)
      height 346px

  .forth-screen-box
    position block
    display block
    width 100%
    height auto
    padding-top 40px
    padding-bottom 16px
    background-color #ffffff
    overflow hidden !important

    @media only screen and (min-width: 768px)
      padding-top 80px
      padding-bottom 50px

    .fourth-screen
      position relative
      display block
      margin 22px auto 0 auto
      width 220px
      height auto
      overflow hidden !important

      &:focus
        outline 0 !important

      @media only screen and (min-width: 768px)
        margin 60px auto 0 auto
        width 414px

    .project-link-button
      margin 12px auto 0 auto !important

      @media only screen and (min-width: 768px)
        margin 32px auto 0 auto
