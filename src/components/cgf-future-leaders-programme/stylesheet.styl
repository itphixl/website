    .third-screen-box
      position relative
      display block
      width 100%
      height auto
      padding-top 32px
      overflow hidden !important

      @media only screen and (min-width: 768px)
        padding-top 80px

      @media only screen and (min-width: 1200px)
        padding-top 306px

      .third-screen
        position relative
        margin 6px auto 0 auto
        display block
        width 100%
        height auto
        overflow hidden !important

        &:focus
          outline 0 !important

        @media only screen and (min-width: 768px)
          margin 46px auto 0 auto

        @media only screen and (min-width: 1200px)
          margin 60px auto 0 auto
          width 1200px

    .forth-screen-box
      position relative
      display block
      margin 0 auto
      width 100%
      height auto
      padding-top 30px
      padding-bottom 186px

      @media only screen and (min-width: 768px)
        padding-top 76px
        padding-bottom 402px

      @media only screen and (min-width: 1200px)
        padding-top 404px
        padding-bottom 678px

      .infos-box
        .title
          color #ffffff !important
          border-bottom-color #ffffff !important

        .text
          color #ffffff !important

      .forth-screen
        position absolute
        left 0
        right 0
        bottom -200px
        margin 0 auto
        display block
        width 286px
        height 348px
        z-index 2
        overflow hidden !important

        &:focus
          outline 0 !important

        @media only screen and (min-width: 768px)
          width 628px
          height 704px
          bottom -400px

        @media only screen and (min-width: 1200px)
          width 1200px
          height 1460px
          bottom -810px

    .end
      position relative
      display block
      width 100%
      height 198px
      background #ffffff
      overflow hidden !important

      @media only screen and (min-width: 768px)
        height 440px

      @media only screen and (min-width: 1200px)
        height 840px

