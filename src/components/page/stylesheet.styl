.page-container
  position absolute
  top 0
  left 0
  bottom 0
  right 0
  background-color #ffffff
  overflow-x hidden !important
  overflow-y auto !important

  .page
    position relative
    display block
    width 100%
    height auto
    border solid 7px #77fcac
    overflow hidden !important

    .header
      position relative
      display block
      width 100%
      height 22px
      overflow hidden !important

      .icon-box
        position absolute
        top 0
        left 0
        bottom 0
        right 0
        overflow hidden !important

        .icon
          position absolute
          top 8px
          right 8px
          width 25px
          height 13px
          background-position center center
          background-size 100% 100%
          background-repeat no-repeat !important
          overflow hidden !important
          cursor pointer !important

          &:focus
            outline 0 !important

    .intro
      position relative
      display block
      width 100%
      height 274px
      overflow hidden !important

      .logo-box
        position absolute
        top 0
        left 0
        bottom 0
        right 0
        overflow hidden !important

        .logo
          position absolute
          top 0
          left 0
          bottom 0
          right 0
          margin auto
          width 136px
          height 28px
          background-position center center
          background-size 100% 100%
          background-repeat no-repeat !important
          overflow hidden !important

    .work,
    .agency,
    .contact
      .title
        position relative
        display block
        width 100%
        height auto
        color #3d3d3d
        font-size 15px
        text-align center

      .underline
        position relative
        display block
        margin 6px auto 0 auto
        height 1px
        background-color #77fcac

      .description
        position relative
        display block
        margin 26px 0 0 0
        width 100%
        height auto
        padding 0 18px
        color #3d3d3d
        font-size 10px
        text-align center
        line-height 11px
        overflow hidden !important

    .work
      position relative
      display block
      width 100%
      height auto
      overflow hidden !important

      .underline
        width 116px

      .grid
        position relative
        display block
        margin-top 26px
        width 100%
        height auto
        overflow hidden !important

    .agency
      position relative
      display block
      margin-top 28px
      width 100%
      height auto
      overflow hidden !important

      .underline
        width 66px

        &:last-of-type
          margin-top 10px !important

      .team
        position relative
        display block
        margin-top 32px
        width 100%
        height auto
        overflow hidden !important

        .row
          margin-bottom 34px

          &:last-of-type
            margin-bottom 0

    .contact
      position relative
      display block
      margin-top 34px
      width 100%
      height auto
      overflow hidden !important

      .underline
        width 56px

      .mails
        position relative
        display block
        margin-top 32px
        width 100%
        height auto
        overflow hidden !important

        .mail-box
          position relative
          display block
          margin 0 auto
          width 96px
          height 22px
          color #3e3e3e
          font-size 10px
          text-align center
          line-height 22px
          border solid 1px #77fcac
          background-color #ffffff
          overflow hidden !important

      .map
        position relative
        display block
        margin-top 38px
        width 100%
        height auto
        overflow hidden !important

        .map-infos,
        .map-illustration
          position relative
          display block
          width 100%
          height auto
          overflow hidden !important

        .map-infos
          margin-bottom 6px

          .adress
            position relative
            display block
            width 100%
            height auto
            color #3e3e3e
            font-size 9px
            line-height 10px
            padding-left 18px
            overflow hidden !important

          .gmaps-button
            position relative
            display block
            width 66px
            height 18px
            color #ffffff
            font-size 8px
            line-height 18px
            text-align center
            background-color #77fcac
            overflow hidden !important
            cursor pointer !important

            &:focus
              outline 0 !important

    .footer
      position relative
      display block
      width 100%
      height auto
      padding 16px 0 12px
      background-color #77fcac
      overflow hidden !important

      .instagram-logo
        position relative
        display block
        margin 0 auto
        width 24px
        height 24px
        background-position center center
        background-size 100% 100%
        background-repeat no-repeat !important
        overflow hidden !important
        cursor pointer !important

      .legal-notice-box
        position relative
        display table
        width auto
        margin 14px auto 0 auto
        overflow hidden !important

        span
          color #ffffff
          font-size 8px
