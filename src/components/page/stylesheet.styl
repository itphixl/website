.page-container
  position absolute
  top 0
  left 0
  bottom 0
  right 0
  background-color #ffffff
  overflow-x hidden !important
  overflow-y auto !important

  .page
    position relative
    display block
    width 100%
    height auto
    border solid 7px #77fcac
    overflow hidden !important

    @media only screen and (min-width: 768px)
      border solid 30px #77fcac

    .header
      position relative
      display block
      width 100%
      height 22px
      overflow hidden !important

      @media only screen and (min-width: 768px)
        height 66px

      @media only screen and (min-width: 1200px)
        height 130px

      .inline-navigation-box
        display none
        position fixed
        top 30px
        left 30px
        right 30px
        height 100px
        z-index 4 !important
        overflow hidden !important

        @media only screen and (min-width: 1200px)
          display none

        .inline-navigation
          position relative
          display table !important
          table-layout !important
          margin 15px auto 0 auto
          height 70px
          background-color rgba(255, 255, 255, 0.9);
          overflow hidden !important

          .inline-navigation-cell
            position relative
            display table-cell !important
            width auto
            padding 0 26px
            height 70px
            overflow hidden !important

            a
              line-height 70px
              font-size 30px

              span
                color #3d3d3d
                transition color 200ms linear

                &:hover
                  color #77fcac

              .is-section
                color #77fcac

      .icon-box
        position absolute
        top 0
        left 0
        bottom 0
        right 0
        overflow hidden !important

        .icon
          position fixed
          top 20px
          right 20px
          width 40px
          height 40px
          border-radius 50%
          background-color rgba(255, 255, 255, 0.9)
          overflow hidden !important
          z-index 4 !important
          cursor pointer !important

          &:focus
            outline 0 !important

          @media only screen and (min-width: 768px)
            top 60px
            right 60px
            width 80px
            height 80px

          @media only screen and (min-width: 1200px)
            top 80px
            right 80px
            // display block

          .img
            position absolute
            top 0
            left 0
            bottom 0
            right 0
            margin auto
            width 25px
            height 13px
            background-position center center
            background-size 100% 100%
            background-repeat no-repeat !important
            overflow hidden !important

            @media only screen and (min-width: 768px)
              width 50px
              height 26px

    .intro
      position relative
      display block
      width 100%
      height 274px
      margin-top 16px
      overflow hidden !important

      @media only screen and (min-width: 768px)
        margin-top 40px
        height 512px

      @media only screen and (min-width: 1200px)
        margin-top 0
        height 998px

      .webgl-box
        position absolute
        top 0
        left 0
        bottom 0
        right 0
        overflow hidden !important

      .logo-box
        position absolute
        top 0
        left 0
        bottom 0
        right 0
        overflow hidden !important

        .logo
          position absolute
          top 0
          left 0
          bottom 0
          right 0
          margin auto
          width 136px
          height 28px
          background-position center center
          background-size 100% 100%
          background-repeat no-repeat !important
          overflow hidden !important

          @media only screen and (min-width: 768px)
            width 356px
            height 72px

          @media only screen and (min-width: 1200px)
            width 812px
            height 164px

    .work,
    .agency,
    .contact
      .title
        position relative
        display block
        width 100%
        height auto
        color #3d3d3d
        font-size 15px
        text-align center

        @media only screen and (min-width: 768px)
          font-size 30px

        @media only screen and (min-width: 1200px)
          font-size 54px

      .underline
        position relative
        display block
        margin 6px auto 0 auto
        height 1px
        background-color #77fcac

        @media only screen and (min-width: 768px)
          height 2px

        @media only screen and (min-width: 1200px)
          margin 16px auto 0 auto
          height 4px

      .description
        position relative
        display block
        margin 26px 0 0 0
        width 100%
        height auto
        padding 0 18px
        color #3d3d3d
        font-size 10px
        text-align center
        line-height 11px
        overflow hidden !important

        @media only screen and (min-width: 768px)
          margin 44px 0 0 0
          font-size 19px
          line-height 20px
          padding 0 40px

        @media only screen and (min-width: 1200px)
          margin 80px 0 0 0
          font-size 30px
          line-height 36px
          padding 0 80px

    .work
      position relative
      display block
      margin 0 auto
      max-width 1366px
      height auto
      overflow hidden !important

      .underline
        width 116px

        @media only screen and (min-width: 768px)
          width 226px

        @media only screen and (min-width: 1200px)
          width 396px

      .projects
        position relative
        display block
        margin-top 26px
        width 100%
        height auto
        overflow hidden !important

        @media only screen and (min-width: 768px)
          margin-top 56px

        @media only screen and (min-width: 1200px)
          margin-top 126px

    .agency
      position relative
      display block
      margin 28px auto 0 auto
      max-width 1366px
      height auto
      overflow hidden !important

      @media only screen and (min-width: 768px)
        margin-top 46px

      @media only screen and (min-width: 1200px)
        margin-top 126px

      .underline
        width 66px

        @media only screen and (min-width: 768px)
          width 124px

        @media only screen and (min-width: 1200px)
          width 224px

      .underline.last-underline
        margin-top 10px

        @media only screen and (min-width: 768px)
          margin-top 20px

        @media only screen and (min-width: 1200px)
          margin-top 56px


      .team
        position relative
        display block
        margin-top 32px
        width 100%
        height auto
        overflow hidden !important

        .row
          margin-bottom 34px

          &:last-of-type
            margin-bottom 0

    .contact
      position relative
      display block
      margin 34px auto 0 auto
      max-width 1366px
      height auto
      overflow hidden !important

      @media only screen and (min-width: 768px)
        margin-top 142px

      @media only screen and (min-width: 1200px)
        margin-top 192px

      .underline
        width 56px

        @media only screen and (min-width: 768px)
          width 110px

        @media only screen and (min-width: 1200px)
          width 190px

      .mails
        position relative
        display block
        margin-top 32px
        width 100%
        height auto
        overflow hidden !important

        @media only screen and (min-width: 768px)
          margin-top 52px

        @media only screen and (min-width: 1200px)
          margin-top 104px

        .mail-box
          position relative
          display block
          margin 0 auto
          width 96px
          height 22px
          color #3e3e3e
          font-size 10px
          text-align center
          line-height 22px
          border solid 1px #77fcac
          background-color #ffffff
          overflow hidden !important

          @media only screen and (min-width: 768px)
            width 250px
            height 56px
            border solid 2px #77fcac
            font-size 26px
            line-height 52px

          @media only screen and (min-width: 1200px)
            width 484px
            height 106px
            border solid 4px #77fcac
            font-size 50px
            line-height 102px


      .map
        position relative
        display block
        margin-top 38px
        width 100%
        height auto
        overflow hidden !important

        @media only screen and (min-width: 768px)
          margin-top 84px

        @media only screen and (min-width: 1200px)
          margin-top 160px

        .map-infos,
        .map-illustration
          position relative
          display block
          width 100%
          height auto
          overflow hidden !important

        .map-infos
          margin-bottom 6px

          @media only screen and (min-width: 768px)
            margin-bottom 22px

          @media only screen and (min-width: 1200px)
            margin-bottom 26px

          .address
            position relative
            display block
            width 100%
            height auto
            color #3e3e3e
            font-size 9px
            line-height 10px
            padding-left 18px
            overflow hidden !important

            @media only screen and (min-width: 768px)
              font-size 16px
              line-height 21px

            @media only screen and (min-width: 1200px)
              font-size 30px
              line-height 38px

          .gmaps-button
            position relative
            display block
            width 66px
            height 18px
            color #ffffff
            font-size 8px
            line-height 18px
            text-align center
            background-color #77fcac
            overflow hidden !important
            cursor pointer !important

            &:focus
              outline 0 !important

            @media only screen and (min-width: 768px)
              width 130px
              height 32px
              font-size 14px
              line-height 31px

            @media only screen and (min-width: 1200px)
              width 252px
              height 64px
              font-size 27px
              line-height 64px

        .map-illustration
          .map-img
            position relative
            display block
            width 100%
            height auto
            overflow hidden !important

            &:focus
              outline 0 !important

    .footer
      position relative
      display block
      width 100%
      height auto
      padding 16px 0 12px
      background-color #77fcac
      overflow hidden !important

      @media only screen and (min-width: 768px)
        padding 32px 0 38px

      @media only screen and (min-width: 1200px)
        padding 78px 0 92px

      .instagram-logo
        position relative
        display block
        margin 0 auto
        width 24px
        height 24px
        background-position center center
        background-size 100% 100%
        background-repeat no-repeat !important
        overflow hidden !important
        cursor pointer !important

        @media only screen and (min-width: 768px)
          width 46px
          height 46px

        @media only screen and (min-width: 1200px)
          width 118px
          height 118px

      .legal-notice-box
        position relative
        display table
        width auto
        margin 14px auto 0 auto
        overflow hidden !important

        @media only screen and (min-width: 768px)
          margin 26px auto 0 auto

        @media only screen and (min-width: 1200px)
          margin 70px auto 0 auto

        span
          color #ffffff
          font-size 8px

          @media only screen and (min-width: 768px)
            font-size 15px

          @media only screen and (min-width: 1200px)
            font-size 34px
            line-height 42px
