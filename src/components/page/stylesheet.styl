.page-container
  position absolute
  top 0
  left 0
  bottom 0
  right 0
  background-color #ffffff
  overflow-x hidden !important
  overflow-y auto !important

  .page
    position relative
    display block
    width 100%
    height auto
    border solid 7px #77fcac
    overflow hidden !important

    @media only screen and (min-width: 768px)
      border solid 30px #77fcac

    .header
      position relative
      display block
      width 100%
      height 22px
      overflow hidden !important

      @media only screen and (min-width: 768px)
        height 66px

      .icon-box
        position absolute
        top 0
        left 0
        bottom 0
        right 0
        overflow hidden !important

        .icon
          position fixed
          top 20px
          right 20px

          width 40px
          height 40px
          border-radius 50%
          background-color rgba(255, 255, 255, 0.9)
          overflow hidden !important
          z-index 4 !important
          cursor pointer !important

          &:focus
            outline 0 !important

          @media only screen and (min-width: 768px)
            top 60px
            right 60px
            width 80px
            height 80px

          .img
            position absolute
            top 0
            left 0
            bottom 0
            right 0
            margin auto
            width 25px
            height 13px
            background-position center center
            background-size 100% 100%
            background-repeat no-repeat !important
            overflow hidden !important

            @media only screen and (min-width: 768px)
              width 50px
              height 26px


    .intro
      position relative
      display block
      width 100%
      height 274px
      margin-top 16px
      overflow hidden !important

      @media only screen and (min-width: 768px)
        margin-top 40px
        height 512px

      .webgl-box
        position absolute
        top 0
        left 0
        bottom 0
        right 0
        overflow hidden !important

      .logo-box
        position absolute
        top 0
        left 0
        bottom 0
        right 0
        overflow hidden !important

        .logo
          position absolute
          top 0
          left 0
          bottom 0
          right 0
          margin auto
          width 136px
          height 28px
          background-position center center
          background-size 100% 100%
          background-repeat no-repeat !important
          overflow hidden !important

          @media only screen and (min-width: 768px)
            width 356px
            height 72px

    .work,
    .agency,
    .contact
      .title
        position relative
        display block
        width 100%
        height auto
        color #3d3d3d
        font-size 15px
        text-align center

        @media only screen and (min-width: 768px)
          font-size 30px

      .underline
        position relative
        display block
        margin 6px auto 0 auto
        height 1px
        background-color #77fcac

        @media only screen and (min-width: 768px)
          height 2px

      .description
        position relative
        display block
        margin 26px 0 0 0
        width 100%
        height auto
        padding 0 18px
        color #3d3d3d
        font-size 10px
        text-align center
        line-height 11px
        overflow hidden !important

        @media only screen and (min-width: 768px)
          margin 44px 0 0 0
          font-size 19px
          line-height 20px
          padding 0 40px

    .work
      position relative
      display block
      width 100%
      height auto
      overflow hidden !important

      .underline
        width 116px

        @media only screen and (min-width: 768px)
          width 226px

      .grid
        position relative
        display block
        margin-top 26px
        width 100%
        height auto
        overflow hidden !important

        @media only screen and (min-width: 768px)
          margin-top 56px

    .agency
      position relative
      display block
      margin-top 28px
      width 100%
      height auto
      overflow hidden !important

      @media only screen and (min-width: 768px)
        margin-top 46px

      .underline
        width 66px

        @media only screen and (min-width: 768px)
          width 124px

      .underline.last-underline
        margin-top 10px

        @media only screen and (min-width: 768px)
          margin-top 20px


      .team
        position relative
        display block
        margin-top 32px
        width 100%
        height auto
        overflow hidden !important

        .row
          margin-bottom 34px

          &:last-of-type
            margin-bottom 0

    .contact
      position relative
      display block
      margin-top 34px
      width 100%
      height auto
      overflow hidden !important

      @media only screen and (min-width: 768px)
        margin-top 142px

      .underline
        width 56px

        @media only screen and (min-width: 768px)
          width 110px

      .mails
        position relative
        display block
        margin-top 32px
        width 100%
        height auto
        overflow hidden !important

        @media only screen and (min-width: 768px)
          margin-top 52px

        .mail-box
          position relative
          display block
          margin 0 auto
          width 96px
          height 22px
          color #3e3e3e
          font-size 10px
          text-align center
          line-height 22px
          border solid 1px #77fcac
          background-color #ffffff
          overflow hidden !important

          @media only screen and (min-width: 768px)
            width 250px
            height 56px
            border solid 2px #77fcac
            font-size 26px
            line-height 52px

      .map
        position relative
        display block
        margin-top 38px
        width 100%
        height auto
        overflow hidden !important

        @media only screen and (min-width: 768px)
          margin-top 84px

        .map-infos,
        .map-illustration
          position relative
          display block
          width 100%
          height auto
          overflow hidden !important

        .map-infos
          margin-bottom 6px

          @media only screen and (min-width: 768px)
            margin-bottom 22px

          .adress
            position relative
            display block
            width 100%
            height auto
            color #3e3e3e
            font-size 9px
            line-height 10px
            padding-left 18px
            overflow hidden !important

            @media only screen and (min-width: 768px)
              font-size 16px
              line-height 21px

          .gmaps-button
            position relative
            display block
            width 66px
            height 18px
            color #ffffff
            font-size 8px
            line-height 18px
            text-align center
            background-color #77fcac
            overflow hidden !important
            cursor pointer !important

            &:focus
              outline 0 !important

            @media only screen and (min-width: 768px)
              width 130px
              height 32px
              font-size 14px
              line-height 31px

    .footer
      position relative
      display block
      width 100%
      height auto
      padding 16px 0 12px
      background-color #77fcac
      overflow hidden !important

      @media only screen and (min-width: 768px)
        padding 32px 0 38px

      .instagram-logo
        position relative
        display block
        margin 0 auto
        width 24px
        height 24px
        background-position center center
        background-size 100% 100%
        background-repeat no-repeat !important
        overflow hidden !important
        cursor pointer !important

        @media only screen and (min-width: 768px)
          width 46px
          height 46px

      .legal-notice-box
        position relative
        display table
        width auto
        margin 14px auto 0 auto
        overflow hidden !important

        @media only screen and (min-width: 768px)
          margin 26px auto 0 auto

        span
          color #ffffff
          font-size 8px

          @media only screen and (min-width: 768px)
            font-size 15px
