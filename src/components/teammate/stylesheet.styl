.geometric-shape
  position relative
  display block
  margin 0 auto
  width 74px
  height 74px
  background blue
  overflow hidden !important

.name-brand
  position relative
  display block
  margin 0 auto
  background-position center center
  background-size 100% 100%
  background-repeat no-repeat !important
  overflow hidden !important

.job
  position relative
  display block
  margin-top 8px
  width 100%
  height auto
  color #3e3e3e
  font-size 9px
  text-align center
  overflow hidden !important

.tagline
  position relative
  display block
  margin-top 14px
  width 100%
  height auto
  color #3e3e3e
  font-size 9px
  line-height 10px
  text-align center
  overflow hidden !important

.linkedin-link
  position relative
  margin 12px auto 0 auto
  display block
  width 66px
  height 18px
  color #ffffff
  font-size 9px
  line-height 18px
  text-align center
  background-color #77fcac
  overflow hidden !important
  cursor pointer !important

  &:focus
    outline 0 !important
