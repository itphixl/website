.geometric-shape
  position relative
  display block
  margin 0 auto
  width 74px
  height 74px
  background-size 100% 100%
  background-position center center
  background-repeat no-repeat !important
  overflow hidden !important

  @media only screen and (min-width: 768px)
    width 160px
    height 160px

  @media only screen and (min-width: 1200px)
    width 600px
    height 600px

.name-brand
  position relative
  display block
  margin 0 auto
  background-position center center
  background-size 100% 100%
  background-repeat no-repeat !important
  overflow hidden !important

.job
  position relative
  display block
  margin-top 8px
  width 100%
  height auto
  color #3e3e3e
  font-size 9px
  text-align center
  overflow hidden !important

  @media only screen and (min-width: 768px)
    margin-top 18px
    font-size 19px

  @media only screen and (min-width: 1200px)
    margin-top 28px
    font-size 24px

.tagline
  position relative
  display block
  margin-top 14px
  width 100%
  height auto
  color #3e3e3e
  font-size 9px
  line-height 14px
  text-align center
  overflow hidden !important

  @media only screen and (min-width: 768px)
    margin-top 32px
    font-size 19px
    line-height 23px

  @media only screen and (min-width: 1200px)
    margin-top 40px
    font-size 24px
    line-height 30px

.linkedin-link
  position relative
  margin 12px auto 0 auto
  display block
  width 66px
  height 18px
  color #ffffff
  font-size 9px
  line-height 18px
  text-align center
  background-color #77fcac
  overflow hidden !important
  cursor pointer !important

  &:focus
    outline 0 !important

  @media only screen and (min-width: 768px)
    margin 32px auto 0 auto
    width 148px
    height 36px
    font-size 19px
    line-height 34px

  @media only screen and (min-width: 1200px)
    margin 40px auto 0 auto
    width 188px
    height 46px
    font-size 24px
    line-height 44px
