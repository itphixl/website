.no-match-container
  position absolute
  top 0
  left 0
  bottom 0
  right 0
  background-color #77fcac
  overflow-x hidden !important
  overflow-y auto !important

  .no-match
    position relative
    display block
    width 100%
    height auto
    border solid 7px #77fcac
    background-color #ffffff

    @media only screen and (min-width: 768px)
      border solid 30px #77fcac

    .header
      position relative
      display block
      width 100%
      height 22px
      overflow hidden !important

      @media only screen and (min-width: 768px)
        height 66px

      @media only screen and (min-width: 1200px)
        height 130px

      .icon-box
        position absolute
        top 0
        left 0
        bottom 0
        right 0
        overflow hidden !important

        .icon
          position fixed
          top 20px
          right 20px
          width 40px
          height 40px
          border-radius 50%
          background-color rgba(255, 255, 255, 0.9)
          overflow hidden !important
          z-index 4 !important
          cursor pointer !important

          &:focus
            outline 0 !important

          @media only screen and (min-width: 768px)
            top 60px
            right 60px
            width 80px
            height 80px

          @media only screen and (min-width: 1200px)
            top 80px
            right 80px
            // display block

          .img
            position absolute
            top 0
            left 0
            bottom 0
            right 0
            margin auto
            width 25px
            height 13px
            background-position center center
            background-size 100% 100%
            background-repeat no-repeat !important
            overflow hidden !important

            @media only screen and (min-width: 768px)
              width 50px
              height 26px

    .url-not-found
      position relative
      display block
      width 100%
      height auto
      padding-top 32px
      padding-bottom 60px
      overflow hidden !important

      @media only screen and (min-width: 768px)
        padding-top 68px
        padding-bottom 106px

      @media only screen and (min-width: 1200px)
        padding-top 216px
        padding-bottom 320px

      .title
        position relative
        display table
        margin 0 auto
        width auto
        height auto
        color #3d3d3d
        font-size 15px
        text-align center
        line-height 21px
        padding-bottom 4px
        border-bottom solid 2px #77fcac
        overflow hidden !important

        @media only screen and (min-width: 768px)
          font-size 30px
          line-height 40px
          padding-bottom 6px

        @media only screen and (min-width: 1200px)
          font-size 53px
          line-height 60px
          padding-bottom 12px
          border-bottom solid 4px #77fcac

      .img-404
        position relative
        display block
        margin 58px auto 0 auto
        width 269px
        height 104px
        background-position center center
        background-size 100% 100%
        background-repeat no-repeat !important
        overflow hidden !important

        @media only screen and (min-width: 768px)
          margin 140px auto 0 auto
          width 454px
          height 176px

        @media only screen and (min-width: 1200px)
          margin 196px auto 0 auto
          width 1200px
          height 478px


      .quote
        position relative
        display block
        width 100%
        height auto
        margin-top 30px
        padding-left 40px
        padding-right 40px
        color #3f3f3f
        font-size 10px
        line-height 14px
        text-align center
        overflow hidden !important

        @media only screen and (min-width: 768px)
          margin-top 70px
          padding-left 80px
          padding-right 80px
          font-size 16px
          line-height 22px

        @media only screen and (min-width: 1200px)
          margin-top 182px
          margin-left auto
          margin-right auto
          width 1200px
          padding-left 0
          padding-right 0
          font-size 34px
          line-height 40px

      .author
        position relative
        display block
        width 100%
        height auto
        margin-top 8px
        padding-right 40px
        color #3f3f3f
        font-size 10px
        line-height 14px
        text-align right
        overflow hidden !important

        @media only screen and (min-width: 768px)
          margin-top 20px
          padding-right 80px
          font-size 16px
          line-height 22px

        @media only screen and (min-width: 1200px)
          margin-top 50px
          margin-left auto
          margin-right auto
          width 1200px
          padding-left 0
          padding-right 0
          font-size 34px
          line-height 40px

    .footer
      position relative
      display block
      width 100%
      height auto
      padding 16px 0 12px
      background-color #77fcac
      overflow hidden !important

      @media only screen and (min-width: 768px)
        padding 32px 0 38px

      @media only screen and (min-width: 1200px)
        padding 78px 0 92px

      .instagram-logo
        position relative
        display block
        margin 0 auto
        width 24px
        height 24px
        background-position center center
        background-size 100% 100%
        background-repeat no-repeat !important
        overflow hidden !important
        cursor pointer !important

        @media only screen and (min-width: 768px)
          width 46px
          height 46px

        @media only screen and (min-width: 1200px)
          width 118px
          height 118px

      .legal-notice-box
        position relative
        display table
        width auto
        margin 14px auto 0 auto
        overflow hidden !important

        @media only screen and (min-width: 768px)
          margin 26px auto 0 auto

        @media only screen and (min-width: 1200px)
          margin 70px auto 0 auto

        span
          color #ffffff
          font-size 8px

          @media only screen and (min-width: 768px)
            font-size 15px

          @media only screen and (min-width: 1200px)
            font-size 34px
            line-height 42px
